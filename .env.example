# AI Senior Living Sales Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Gemini AI API Configuration
# =============================================================================
# Get your API key from: https://ai.google.dev/gemini-api/docs
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# REQUIRED: Flask Application Configuration
# =============================================================================
# Secret key for Flask session management (generate a random string)
SECRET_KEY=your_random_secret_key_here_change_in_production

# CORS allowed origins (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5050

# =============================================================================
# OPTIONAL: Google Sheets CRM Integration
# =============================================================================
# Enable CRM integration (set to true to enable)
GOOGLE_SHEETS_ENABLED=false

# Google Sheets ID from the URL (optional)
# Example: https://docs.google.com/spreadsheets/d/YOUR_SPREADSHEET_ID_HERE/
GOOGLE_SPREADSHEET_ID=your_google_sheets_id_here

# Google Service Account JSON file path (optional)
# Download from Google Cloud Console > IAM & Admin > Service Accounts
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account.json

# =============================================================================
# OPTIONAL: Email Configuration (for sending recommendations)
# =============================================================================
# SMTP server settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Email addresses
FROM_EMAIL=your_email@gmail.com
MANAGER_EMAIL=manager@company.com

# =============================================================================
# OPTIONAL: Application Settings
# =============================================================================
# Maximum file upload size in bytes (default: 50MB)
MAX_CONTENT_LENGTH=52428800

# Upload folder path (relative to project root)
UPLOAD_FOLDER=uploads

# Output folder path (relative to project root)
OUTPUT_FOLDER=output

# =============================================================================
# OPTIONAL: Development Settings
# =============================================================================
# Flask debug mode (set to true for development)
FLASK_DEBUG=false

# Flask environment (development/production)
FLASK_ENV=production

# =============================================================================
# OPTIONAL: Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=app.log

# =============================================================================
# OPTIONAL: API Configuration
# =============================================================================
# API key for external access (leave empty to disable)
API_KEY=

# Rate limiting (requests per minute)
RATE_LIMIT=60

# =============================================================================
# OPTIONAL: External Service URLs
# =============================================================================
# Custom API endpoints (if using external services)
GEOCODING_API_URL=
CRM_WEBHOOK_URL=

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
#
# 1. GEMINI API KEY:
#    - Go to https://ai.google.dev/gemini-api/docs
#    - Create a project or use existing one
#    - Generate an API key
#    - Copy it here
#
# 2. GOOGLE SHEETS (Optional):
#    - Create a Google Sheet for CRM data
#    - Copy the ID from the URL
#    - Create a Service Account in Google Cloud Console
#    - Download the JSON key file
#    - Set the path to the JSON file
#
# 3. EMAIL (Optional):
#    - For Gmail: Enable 2FA, then create an App Password
#    - Use the App Password (not your regular password)
#
# 4. SECURITY:
#    - Never commit the .env file to version control
#    - Use strong random strings for SECRET_KEY
#    - Rotate API keys regularly
#
# =============================================================================